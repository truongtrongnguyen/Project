@using BangHang.Areas.Menus.Controllers
@using BangHang.Models.Blog
@inject BangHang.Models.Services.CartService _cartService

<div class="main_nav_container">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-right">
                <div class="logo_container">
                    <a asp-action="Index" asp-controller="Menu" asp-area="Menus">PET-<span>shop</span></a>
                </div>
                <nav class="navbar">
                    <ul class="navbar_menu">
                        <li><a asp-action="Index" asp-controller="Menu" asp-area="Menus"> Trang chủ</a></li>
                        <li><a asp-action="Index" asp-controller="Promotion" asp-area="Users">Khuyến mãi</a></li>
                        <li><a asp-action="Categories" asp-controller="Menu" asp-area="Users">Sản phẩm</a></li>
                        <li><a asp-action="Index" asp-controller="PostBlog" asp-area="Users">Tin tức</a></li>
                        <li><a asp-action="ShoppingGuide" asp-controller="Menu" asp-area="Users">Hướng dẫn mua hàng</a></li>
                    </ul>
                    <ul class="navbar_user">
                        <li><a href="#"><i class="fa fa-search" aria-hidden="true"></i></a></li>

                        <li>
                            <a asp-action="Index" asp-controller="User" asp-area="Users">
                                <i class="fa fa-user" aria-hidden="true"></i>
                            </a>
                        </li>
                        <li class="checkout">
                            <a asp-action="ShoppingCart" asp-controller="Menu" asp-area="Menus">
                                <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                <span id="checkout_items" class="checkout_items">@_cartService.GetCartItems().Count()</span>
                            </a>
                        </li>
                    </ul>
                    <div class="hamburger_container">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>
