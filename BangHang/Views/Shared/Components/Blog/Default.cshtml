@using BangHang.Models.Blog
@model List<Post>

	<div class="blogs">
		<div class="container">
			<div class="row">
				<div class="col text-center">
					<div class="section_title">
						<h2>Tin nổi bậc</h2>
					</div>
				</div>
			</div>

			<div class="row blogs_container">

				@if(Model?.Count > 0)
			{
				foreach (var item in Model)
				{
					<div class="col-lg-4 blog_item_col mb-4">
						<div class="blog_item">
							<div class="blog_background" style="background-image:url(/Contents/Posts/@item.Image)"></div>
							<div class="blog_content d-flex flex-column align-items-center justify-content-center text-center">
								<h4 class="blog_title three-line-paragraph">@item.Title</h4>
								<span class="blog_meta ">By Admin |@item.DateCreate?.ToShortDateString()</span>
								<a class="blog_more" asp-area="Users" asp-action="PostBlogDetail" asp-controller="PostBlog" asp-route-id="@item.Id">Read more</a>
							</div>
						</div>
					</div>
				}
			}
		</div>
		</div>
	</div>
