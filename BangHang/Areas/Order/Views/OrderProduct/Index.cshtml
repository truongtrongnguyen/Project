@using BangHang.Models.OderProduct
@model List<Order>
@{
    var i = 1;
}

<div class="card-header">
    <h3 class="card-title">Danh sách đơn dặt hàng</h3>

@*    <div class="card-tools">
        <a asp-action="Create" class="btn btn-primary m-2">Thêm mới</a>
    </div>*@
    <div class="card-body">
        <table class="table table-hover">
            <thread>
                <tr>
                    <th>STT</th>
                    <th>Mã đơn hàng</th>
                    <th>Tên khách hàng</th>
                    <th>Số điện thoại</th>
                    <th>Email</th>
                    <th>Tổng tiền</th>
                    <th>Ngày đặt</th>
                    <th>Loại thanh toán</th>
                    <th></th>
                </tr>
            </thread>
            <tbody>
                @foreach (var item in Model)
                {
                    
                    <tr id="trow_@item.Id">
                        <td>@(i++)</td>
                        <td>
                            <a asp-action="OrderDetail" asp-controller="OrderProduct" asp-area="Order" asp-route-id="@item.Id">
                                @item.Code
                            </a>
                         </td>
                        <td>@item.CustomerName</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>@item.TotalAmount</td>
                        <td>@item.DateCreate</td>
                        <td>@item.Payment</td>
                    </tr>


                }
            </tbody>
        </table>

    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
    <!-- /.card-footer-->
</div>
