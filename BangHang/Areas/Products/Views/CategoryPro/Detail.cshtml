}
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Thông tin bài viết</h3>
            </div>
            <div class="card-body">
                <div class="bs-stepper-content">

                    <div class="col-md-12">
                        <div>
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Title)</dt>
                                <dd class=col-sm-8>@Html.DisplayFor(model => model.Title)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Slug)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Slug)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IsActive)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.IsActive)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DesCriptions)</dt>
                                <dd class="col-sm-8">@Html.Raw(Model.DesCriptions)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SeoTitle)</dt>
                                <dd class="col-sm-8">@Html.Raw(Model.SeoTitle)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SeoKeyword)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.SeoKeyword)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SeoDesCriptions)</dt>
                                <dd class="col-sm-8">@Html.Raw(Model.SeoDesCriptions)</dd>
                            </dl>
                            <a asp-action="Index" class="btn btn-primary m-4">Trang chủ</a>
                            <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Chỉnh sửa</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

